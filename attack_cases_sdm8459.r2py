# New File Operation

# Clean up of existing file
if "testfile.txt.a" in listfiles():
	removefile("testfile.txt.a")
if "testfile.txt.b" in listfiles():
	removefile("testfile.txt.b")

# Open File Function Call
myfile=ABopenfile("testfile.txt",False)  #Create an AB file

def file_check(myfile):
	try:
		# Empty/New File should have contents 'SE' satisfying the requirement
		assert('SE' == myfile.readat(None,0))
		# Close the file:
		myfile.close()
	except:
		myfile.close()
		# Error Handle or Failure Condition
		log("Empty file is not handled properly!")
	return pass

file_check(myfile)
# put some valid data in the file.
myfile.writeat("Sattack1337", 0)
file_check(myfile)


